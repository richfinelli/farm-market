//Add Product page
//header and footer of add product page
.add-product__title-container
  display: flex
  justify-content: space-between
  align-items: center
  height: 100px
  
.add-product__title-container--header
  justify-content: space-between
  border-bottom: 5px solid $black

.add-product__title-container--footer
  justify-content: flex-end
  border-top: 5px solid $black

//body of the add product page
.add-product__body-container
  display: flex
  justify-content: space-between
  margin: 30px 0

.add-product__image-container
  flex-basis: 25%
  display: flex
  flex-direction: column
  justify-content: stretch

.add-product__image
  background-color: $white
  border-radius: $borderRadius
  box-shadow: $boxShadow
  padding: 25px
  margin-bottom: 20px

.add-product__fields-container
  flex-basis: 70%
  display: flex
  flex-direction: column
  justify-content: stretch

.form-field__container
  display: flex
  justify-content: stretch
  align-items: flex-end
  height: 75px
  margin-bottom: 30px
  border-bottom: 2px solid $gray-light
  label
    flex-basis: 25%
    margin-bottom: 10px
  input, select
    flex-basis: 75%
    //align-self: stretch;
    background: transparent
    border: 0px solid transparent
    margin-bottom: 10px
  &--special
    border-bottom: 0

.form-field__hint-text
  color: $gray
  font-size: 1rem
  margin-bottom: 10px
  margin-left: 10px

.form-field__hint-text--invalid
  color: $error

.product-qty__container
  display: flex
  justify-content: flex-start
  align-items: center
  p, .btn
    margin-left: 10px
    margin-bottom: 5px
  :first-child
    margin-left: 0